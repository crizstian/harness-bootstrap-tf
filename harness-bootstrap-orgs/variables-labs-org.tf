variable "cristian_lab_orgs" {
  default = {
    "cristian-lab-org" = {
      enable      = true
      description = "Organization generated by terraform harness provider"
    }
    "cristian-lab-bcp-org" = {
      enable      = true
      description = "Organization generated by terraform harness provider"
    }
    "cristian-lab-cinemas-org" = {
      enable      = true
      description = "Organization generated by terraform harness provider"
    }
  }
}

locals {
  cristian_lab_org_projects = {
    "Cristian TF Setup Org" = {
      enable      = true
      org_id      = module.bootstrap_harness_account.organization["cristian-lab-org"].org_id
      description = "Project generated by terraform harness provider"
    }
    "Harness BCP Setup Org" = {
      enable      = true
      org_id      = module.bootstrap_harness_account.organization["cristian-lab-bcp-org"].org_id
      description = "Project generated by terraform harness provider"
    }
    "Harness Cinemas Setup Org" = {
      enable      = true
      org_id      = module.bootstrap_harness_account.organization["cristian-lab-cinemas-org"].org_id
      description = "Project generated by terraform harness provider"
    }
  }
}
